{
    "id": "org.kde.mobile.angelfish",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.14",
    "command": "angelfish",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications",
        "--env=LD_LIBRARY_PATH=/app/lib/x86_64-linux-gnu:/app/lib/i386-linux-gnu:/app/lib/aarch64-linux-gnu:/app/lib/arm-linux-gnueabihf:/app/lib"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "angelfish",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DBUILD_TESTING=OFF"],
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}
